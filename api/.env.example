# ====================
# LLM Configuration (NVIDIA NIM - Recommended)
# ====================
# NVIDIA NIM provides optimized inference for open-source models
# Get API Key from: https://build.nvidia.com/

# NVIDIA API Key (required for NIM models)
NVIDIA_API_KEY=nvapi-...

# NVIDIA NIM Base URL (defaults to official endpoint)
NVIDIA_NIM_BASE_URL=https://integrate.api.nvidia.com/v1

# Default model for LLM calls (can use any NVIDIA NIM model)
NVIDIA_DEFAULT_MODEL=deepseek-ai/deepseek-r1

# Embedding model for vector operations
NVIDIA_EMBEDDING_MODEL=nvidia/llama-3.2-nemoretriever-300m-embed-v2


# ====================
# Alternative LLM Providers (Optional)
# ====================
# OpenAI API Key (for GPT models)
OPENAI_API_KEY=sk-...

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=sk-ant-...

# Azure OpenAI (optional)
AZURE_API_KEY=your_azure_api_key_here
AZURE_API_BASE=https://<resource>.openai.azure.com/
AZURE_API_VERSION=2024-02-15-preview

# Google AI (optional)
GOOGLE_API_KEY=your_google_api_key_here

# Cohere (optional)
COHERE_API_KEY=your_cohere_api_key_here


# ====================
# Database Configuration
# ====================
# SQLite is default for development
# DATABASE_URL=sqlite:///./startup_swiper.db

# For PostgreSQL in production:
# DATABASE_URL=postgresql://user:password@localhost/startup_swiper


# ====================
# External APIs
# ====================
# CB Insights API (for startup research)
CB_INSIGHTS_API_KEY=your_cb_insights_api_key_here

# Google Maps API Key (for directions and location services)
GOOGLE_MAPS_API_KEY=...


# ====================
# Logging and Debugging
# ====================
# Enable verbose logging for development
LOG_LEVEL=INFO

# LangSmith Tracing (optional, for debugging LLM calls)
LANGSMITH_API_KEY=...
LANGSMITH_TRACING=true
LANGSMITH_PROJECT=startup-swiper

# Enable LiteLLM debugging
LITELLM_DEBUG=true
# Google Maps API (for directions)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Database URL (optional, defaults to SQLite)
DATABASE_URL=sqlite:///./startup_swiper.db

# JWT Secret for authentication
SECRET_KEY=your_secret_key_here_change_in_production

# Web Push Notifications (VAPID)
# Generate these with: python3 generate_vapid_keys.py
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here

# Logging
LOG_LEVEL=INFO
